<div class="card">
  <div class="card-block">
    <div class="row">
      <div class="col-md-1">
        <%= image_tag current_user.gravatar_url %>
      </div>
      <div class="col-md-11">
        <p class="card-text">
          <span class="text-muted"><%= message.user.name %> at <%= message.timestamp %> says</span><br>
          <%= message.body %>
        </p>
      </div>
    </div>
  </div>
</div>